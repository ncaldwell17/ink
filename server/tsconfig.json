{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "esNext",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": ["es2018"]
  },
  "include": [
    "/**/*.ts",
    "/**/*.tsx"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "types": ["node"]
    }
  },
}
